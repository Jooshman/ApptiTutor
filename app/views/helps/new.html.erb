<%= form_for @helpmessage, url: contact_path do |message_form| %>
  <fieldset>
    <div class="field">
      <%= message_form.text_field :subject, placeholder: "Subject" %>
    </div>
    
    <div class="field">
      <%= message_form.text_area :content, placeholder: "Message"%>
    </div>
  </fieldset>
  
  <fieldset>
    <div class="field">
      <%= message_form.submit "Send" %>
    </div>
  </fieldset>
<% end %>